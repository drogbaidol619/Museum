{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    { 
      "src": "/api/esp8266_1_update",
      "dest": "/api/index.js",
      "methods": ["POST"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST"
      }
    },
    { 
      "src": "/api/(.*)", 
      "dest": "/api/index.js" 
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "protectionBypass": {
    "/api/esp8266_1_update": {
      "required": false
    }
  }
}